class com.eXULiS.lib.draggableComponent{		private var dc_mc:MovieClip;			private static var instance:draggableComponent;			private function draggableComponent()	{					}				public static function getInstance():draggableComponent	{		if(draggableComponent.instance == null)        {	    draggableComponent.instance = new draggableComponent();		//draggableComponent.instance.createDropInstance();        }        return draggableComponent.instance;	}				private function createDropInstance()	{		if (!_root.dragComp)		{			dc_mc=_root.attachMovie("DraggableController","dragComp",666);			dc_mc._y=-4500;		}	}			public function setConnection(source_mc,destination_mc):Void	{						trace("EXO : "+ source_mc + " > " + destination_mc);				dc_mc.AddReference(source_mc, destination_mc);		dc_mc.addEventListener("drag_complete", this);	}			private function drag_complete(evt:Object):Void{	trace("source, target: " + [evt.source_component, evt.target_component]);			trace("DRAG : "+evt.source_component);	trace("DRAG : "+evt.target_component);	}		}