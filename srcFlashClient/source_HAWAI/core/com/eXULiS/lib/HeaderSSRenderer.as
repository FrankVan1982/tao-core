import mx.core.UIComponent;import com.eXULiS.lib.Toolbox;import mx.controls.TextArea;import TextField.StyleSheet;import com.eXULiS.lib.*;class com.eXULiS.lib.HeaderSSRenderer extends UIComponent{		var htmlComponent:TextField;	var car : MovieClip;		var owner;	var listOwner : MovieClip;   // the reference we receive to the list	var getCellIndex : Function; // the function we receive from the list	var	getDataLabel : Function; // the function we receive from the list	var toolbox:Toolbox;	var previousLabel:String = null; // for optimization		function HeaderSSRenderer()	{		toolbox=new Toolbox();	}	function createChildren(Void) : Void	{						createLabel("htmlComponent", 20);		htmlComponent.html = true;		htmlComponent.border = false;		htmlComponent.multiline = true;		htmlComponent.wordWrap = true;		htmlComponent.selectable = false;		htmlComponent.background = false;		size();			}	// note that setSize is implemented by UIComponent and calls size(), after setting	// __width and __height	function size(Void) : Void	{		htmlComponent.setSize(__width-2, __height-2);	}	function setValue(str:String, item:Object, sel:Boolean) : Void	{							htmlComponent.htmlText = toolbox.wrapRun(str);			for (var a in htmlComponent._parent)			{				trace("VINCE "+a+" > "+htmlComponent._parent[a]);			}				}	function getPreferredHeight(Void) : Number	{		if (owner == undefined) return 18;		return owner.__height - 2;	}	/*function getPreferredWidth(Void) : Number	{		return 20;	}*/}