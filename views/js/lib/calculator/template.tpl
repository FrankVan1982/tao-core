<div class="calcContainer">
    <form action="">
        <input type="text" class="calcDisplay" />

        <input type="button" value="%" data-key="%" class="calcFunction calcFirst" />
        <input type="button" value="sqrt" data-key="sqrt" class="calcFunction" />
        <input type="button" value="pow" data-key="pow" class="calcFunction" />
        <input type="button" value="1/x" data-key="1/x" class="calcFunction" />

        <input type="button" value="C" data-key="C" class="calcClear calcFirst" />
        <input type="button" value="CE" data-key="CE" class="calcClear" />
        <input type="button" value="DEL" data-key="DEL" class="calcClear" />
        <input type="button" value="/" data-key="/" class="calcFunction" />

        <input type="button" value="7" data-key="7" class="calcInput calcDigit calcFirst" />
        <input type="button" value="8" data-key="8" class="calcInput calcDigit" />
        <input type="button" value="9" data-key="9" class="calcInput calcDigit" />
        <input type="button" value="*" data-key="*" class="calcFunction" />

        <input type="button" value="4" data-key="4" class="calcFirst calcDigit calcInput" />
        <input type="button" value="5" data-key="5" class="calcInput calcDigit" />
        <input type="button" value="6" data-key="6" class="calcInput calcDigit" />
        <input type="button" value="-" data-key="-" class="calcFunction" />

        <input type="button" value="1" data-key="1" class="calcFirst calcDigit calcInput" />
        <input type="button" value="2" data-key="2" class="calcInput calcDigit" />
        <input type="button" value="3" data-key="3" class="calcInput calcDigit" />
        <input type="button" value="+" data-key="+" class="calcFunction" />

        <input type="button" value="+/-" data-key="+/-" class="calcFirst calcInput" />
        <input type="button" value="0" data-key="0" class="calcInput calcDigit" />
        <input type="button" value="." data-key="." class="calcInput" />
        <input type="submit" value="=" data-key="=" class="calcFunction calcSubmit" />
    </form>
</div>