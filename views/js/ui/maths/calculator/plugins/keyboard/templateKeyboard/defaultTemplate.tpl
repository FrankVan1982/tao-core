<div class="configurable-keyboard">
    <div class="row">
        <button class="key" data-command="term" data-param="SQRT">√</button>
        <button class="key" data-command="term" data-param="LPAR">(</button>
        <button class="key" data-command="term" data-param="RPAR">)</button>
        <button class="key" data-command="clear">C</button>
        <button class="key" data-command="clearAll">CA</button>
    </div>
    <div class="row">
        <button class="key" data-command="term" data-param="CBRT">∛</button>
        <button class="key" data-command="term" data-param="NUM7">7</button>
        <button class="key" data-command="term" data-param="NUM8">8</button>
        <button class="key" data-command="term" data-param="NUM9">9</button>
        <button class="key" data-command="term" data-param="DIV">÷</button>
    </div>
    <div class="row">
        <button class="key" data-command="term" data-param="POW NUM2">x<sup>2</sup></button>
        <button class="key" data-command="term" data-param="NUM4">4</button>
        <button class="key" data-command="term" data-param="NUM5">5</button>
        <button class="key" data-command="term" data-param="NUM6">6</button>
        <button class="key" data-command="term" data-param="MUL">×</button>
    </div>
    <div class="row">
        <button class="key" data-command="term" data-param="POW NUM3">x<sup>3</sup></button>
        <button class="key" data-command="term" data-param="NUM1">1</button>
        <button class="key" data-command="term" data-param="NUM2">2</button>
        <button class="key" data-command="term" data-param="NUM3">3</button>
        <button class="key" data-command="term" data-param="SUB">−</button>
    </div>
    <div class="row">
        <button class="key" data-command="term" data-param="POW">x<sup>y</sup></button>
        <button class="key" data-command="term" data-param="NUM0">0</button>
        <button class="key" data-command="term" data-param="DOT">.</button>
        <button class="key" data-command="execute">=</button>
        <button class="key" data-command="term" data-param="ADD">+</button>
    </div>
</div>